<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White">

    <!-- ðŸ”µ Top Bar: Back + Home -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/DodgerBlue">

        <!-- Back -->
        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/DesatDodgerBlue"
            android:clickable="true"
            android:focusable="true">

            <TextView
                style="@style/ShadowText"
                android:text="Back"
                android:textColor="@color/White"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <!-- Home -->
        <FrameLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/DodgerBlue"
            android:clickable="true"
            android:focusable="true">

            <TextView
                style="@style/ShadowText"
                android:text="Home"
                android:textColor="@color/White"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>


    <!-- ðŸ“ MATCH RESULT TEXT (ONLY TEXT â€” NO IMAGES) -->
    <TextView
        android:id="@+id/txtMatchExplanation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/DodgerBlue"
        android:textSize="30sp"
        android:padding="24dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:textAlignment="center"
        android:text="Matching Result:\n\nâ€¢ Outfit compatibility: pending...\nâ€¢ Explanation: pending..." />

</LinearLayout>
