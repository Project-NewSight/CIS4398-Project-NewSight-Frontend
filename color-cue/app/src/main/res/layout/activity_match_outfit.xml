<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White">

    <!-- ðŸ”µ Top Bar: Back + Home -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/DodgerBlue">

        <!-- Back -->
        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/DesatDodgerBlue">

            <TextView
                style="@style/ShadowText"
                android:text="Back"
                android:textColor="@color/White"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <!-- Home -->
        <FrameLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/DodgerBlue">

            <TextView
                style="@style/ShadowText"
                android:text="Home"
                android:textColor="@color/White"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>



    <!-- ðŸ”¶ TWO-COLUMN LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="8dp">

        <!-- LEFT COLUMN -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Add First Image -->
            <FrameLayout
                android:id="@+id/btnAddFirstImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/rectangle_deep_blue"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    style="@style/ShadowText"
                    android:text="Add Image 1"
                    android:textSize="30sp"
                    android:textColor="@color/White"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <!-- Preview 1 -->
            <FrameLayout
                android:id="@+id/preview1Container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/BlackSqueeze"
                android:layout_marginTop="8dp"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/imgPreview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
        </LinearLayout>



        <!-- RIGHT COLUMN -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Add Second Image -->
            <FrameLayout
                android:id="@+id/btnAddSecondImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/rectangle_deep_blue"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    style="@style/ShadowText"
                    android:text="Add Image 2"
                    android:textSize="30sp"
                    android:textColor="@color/White"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <!-- Preview 2 -->
            <FrameLayout
                android:id="@+id/preview2Container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/BlackSqueeze"
                android:layout_marginTop="8dp"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/imgPreview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>



    <!-- ðŸŽ¤ Mic Bar -->
    <FrameLayout
        android:id="@+id/btnMic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/DodgerBlue">

        <ImageView
            style="@style/MicIconStyle"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic"/>
    </FrameLayout>

</LinearLayout>
