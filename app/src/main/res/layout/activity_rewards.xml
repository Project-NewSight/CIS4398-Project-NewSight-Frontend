<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textRewardsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Rewards"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Summary card -->
    <LinearLayout
        android:id="@+id/layoutSummaryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textRewardsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textSummaryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Points"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/muted_foreground" />

        <TextView
            android:id="@+id/textTotalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,250"
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/textCurrentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current value: $1.25"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/muted_foreground" />

        <TextView
            android:id="@+id/textAwayFromNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8,750 points away from a $10 gift card"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/muted_foreground" />
    </LinearLayout>

    <!-- How you earn points -->
    <TextView
        android:id="@+id/textHowEarnHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How you earn points"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutSummaryCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textHowEarnList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="- Start and finish a navigation session: +50 pts\n- Use object detection during your walk: +40 pts\n- Use transit assist for a full trip: +60 pts\n- Daily check-in with the app: +10 pts\n- Maintain a 5-day weekly streak: +100 pts\n- Send feedback or report an issue: +20 pts"
        android:textSize="14sp"
        android:textColor="@color/muted_foreground"
        app:layout_constraintTop_toBottomOf="@id/textHowEarnHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gift card tiers -->
    <TextView
        android:id="@+id/textGiftCardHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gift card reward tiers"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textHowEarnList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layoutGiftCardCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textGiftCardHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textTier10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• $10 gift card (10,000 pts)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textTier50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="• $50 gift card (50,000 pts)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textTier100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="• $100 gift card (100,000 pts)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textConversionNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Conversion: 1,000 points = $1.00"
            android:textSize="13sp"
            android:textColor="@color/muted_foreground" />
    </LinearLayout>

    <!-- Redeem button -->
    <Button
        android:id="@+id/buttonRedeemPoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Redeem Points"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutGiftCardCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
