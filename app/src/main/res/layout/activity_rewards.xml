<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textRewardsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Rewards"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Summary card -->
    <LinearLayout
        android:id="@+id/layoutSummaryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textRewardsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textSummaryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Points"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/muted_foreground" />

        <TextView
            android:id="@+id/textTotalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,250"
            android:layout_marginTop="4dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/textCurrentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current value: $1.25"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/muted_foreground" />

        <TextView
            android:id="@+id/textAwayFromNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8,750 points away from a $10 gift card"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/muted_foreground" />
    </LinearLayout>

    <!-- How you earn points -->
    <LinearLayout
        android:id="@+id/layoutHowEarn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutSummaryCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textHowEarnHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How you earn points"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Clean bullet list in its own card -->
        <LinearLayout
            android:id="@+id/layoutHowEarnCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Start and finish a navigation session: +50 pts"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Use object detection during your walk: +40 pts"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Use transit assist for a full trip: +60 pts"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Daily check-in with the app: +10 pts"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Maintain a 5-day weekly streak: +100 pts"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Send feedback or report an issue: +20 pts"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />
        </LinearLayout>
    </LinearLayout>

    <!-- Gift card tiers -->
    <LinearLayout
        android:id="@+id/layoutTiers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHowEarn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textTiersHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gift card reward tiers"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• $10 gift card (10,000 pts)"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• $50 gift card (50,000 pts)"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• $100 gift card (100,000 pts)"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Conversion: 1,000 points = $1.00"
                android:textSize="12sp"
                android:textColor="@color/muted_foreground" />
        </LinearLayout>
    </LinearLayout>

    <!-- Redeem button -->
    <Button
        android:id="@+id/buttonRedeemPoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Redeem Points"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
