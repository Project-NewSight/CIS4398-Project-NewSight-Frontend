<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <!-- ðŸ”µ Top Bar: Back + Home -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/DodgerBlue">

        <!-- Back -->
        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/DesatDodgerBlue"
            android:clickable="true"
            android:focusable="true">

            <TextView
                style="@style/ShadowText"
                android:text="Back"
                android:textColor="@color/White"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <!-- Home -->
        <FrameLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/DodgerBlue"
            android:clickable="true"
            android:focusable="true">

            <TextView
                style="@style/ShadowText"
                android:text="Home"
                android:textColor="@color/White"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>


    <!-- ðŸ“„ Summary Box (BlackSqueeze Neutral Tile) -->
    <LinearLayout
        android:id="@+id/summaryBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/BlackSqueeze"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="top|center_horizontal">

        <!-- ðŸ–¼ Image Preview -->
        <ImageView
            android:id="@+id/imgReviewPreview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp"
            android:background="#222"
            android:scaleType="centerCrop" />

        <!-- ðŸ“ Item Summary Text -->
        <TextView
            android:id="@+id/txtSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/DodgerBlue"
            android:textSize="28sp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:padding="12dp"
            android:text="Detected:\nâ€¢ Color: ---\nâ€¢ Category: ---\nâ€¢ Pattern: ---\nâ€¢ Material: ---\nâ€¢ Genre: ---\nâ€¢ Notes: ---"/>
    </LinearLayout>


    <!-- ðŸŸ¦ Save Button (Deep Blue) -->
    <FrameLayout
        android:id="@+id/btnSaveItem"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/rectangle_deep_blue"
        android:clickable="true"
        android:focusable="true">

        <TextView
            style="@style/ShadowText"
            android:gravity="center"
            android:text="Save Item"
            android:textColor="@color/White"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>


    <!-- ðŸŸ¦ Edit Info (Morning Glory) -->
    <FrameLayout
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/rectangle_morning_glory"
        android:clickable="true"
        android:focusable="true">

        <TextView
            style="@style/ShadowText"
            android:gravity="center"
            android:text="Edit Info"
            android:textColor="@color/White"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>


    <!-- ðŸŽ¤ Bottom Mic Bar -->
    <FrameLayout
        android:id="@+id/btnMic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/DodgerBlue"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            style="@style/MicIconStyle"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic"/>
    </FrameLayout>

    <!-- ðŸ”„ Uploading Overlay -->
    <include
        android:id="@+id/loadingOverlay"
        layout="@layout/loading_overlay"
        android:visibility="gone"/>

</LinearLayout>
