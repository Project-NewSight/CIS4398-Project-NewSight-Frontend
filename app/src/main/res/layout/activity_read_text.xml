<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Camera preview (full screen) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top status bar -->
    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â— Connecting..."
        android:textColor="#FFAA00"
        android:textSize="14sp"
        android:background="#80000000"
        android:padding="12dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Detected text display (center-bottom area) -->
    <TextView
        android:id="@+id/tvDetectedText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ready to detect text"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#CC000000"
        android:padding="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="180dp"
        android:minHeight="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Control buttons container -->
    <LinearLayout
        android:id="@+id/controlButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Start/Stop Detection Button -->
        <Button
            android:id="@+id/btnStartStop"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:text="Start Detection"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="16dp" />

        <!-- Read Aloud Button -->
        <Button
            android:id="@+id/btnReadAloud"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:text="Read Aloud"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3" />

    </LinearLayout>

    <!-- Home Button (bottom left) -->
    <FrameLayout
        android:id="@+id/btnHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circular_button_bg"
        android:layout_margin="24dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            app:tint="#FFFFFF" />
    </FrameLayout>

    <!-- Microphone Button (bottom right) -->
    <FrameLayout
        android:id="@+id/btnMic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circular_button_bg"
        android:layout_margin="24dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic"
            android:contentDescription="Voice Command"
            app:tint="#FFFFFF" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>