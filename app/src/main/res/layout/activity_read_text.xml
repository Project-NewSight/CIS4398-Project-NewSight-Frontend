<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ReadTextActivity">

    <!-- Camera preview (full screen) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleType="fitCenter" />

    <!-- Top status bar -->
    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â— Connecting..."
        android:textColor="#FFAA00"
        android:textSize="14sp"
        android:background="#80000000"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:layout_gravity="top|start" />

    <!-- Detected text display (center area) -->
    <TextView
        android:id="@+id/tvDetectedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to detect text"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#CC000000"
        android:padding="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="200dp"
        android:minHeight="120dp"
        android:layout_gravity="bottom|center_horizontal" />

    <!-- Control buttons container -->
    <LinearLayout
        android:id="@+id/controlButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_gravity="bottom|center_horizontal">

        <!-- Start/Stop Detection Button -->
        <Button
            android:id="@+id/btnStartStop"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:text="Start Detection"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary"
            android:layout_marginEnd="16dp" />

        <!-- Read Aloud Button -->
        <Button
            android:id="@+id/btnReadAloud"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:text="Read Aloud"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/accent" />

    </LinearLayout>

    <!-- Floating Bottom Navigation Bar -->
    <FrameLayout
        android:id="@+id/floatingBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_bottom_nav_pill"
        android:elevation="8dp"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Home Tab -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/muted_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="10sp"
                    android:textColor="@color/muted_foreground"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Voice Tab -->
            <LinearLayout
                android:id="@+id/navVoice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_mic"
                    app:tint="@color/muted_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voice"
                    android:textSize="10sp"
                    android:textColor="@color/muted_foreground"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Settings Tab -->
            <LinearLayout
                android:id="@+id/navSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/muted_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="10sp"
                    android:textColor="@color/muted_foreground"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>