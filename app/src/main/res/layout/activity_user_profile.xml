<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- ðŸŸ¦ Home Bar -->
    <FrameLayout
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/rectangle_deep_blue"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Go to Home">

        <TextView
            style="@style/ShadowText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- ðŸ§© Profile Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/cardName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_light_blue">

            <TextView
                style="@style/ShadowText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cardEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_green">

            <TextView
                style="@style/ShadowText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cardPreferredMode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_orange">

            <TextView
                style="@style/ShadowText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Preferred Mode"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cardAccessibility"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_pink">

            <TextView
                style="@style/ShadowText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Accessibility"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_yellow"
            android:clickable="true"
            android:focusable="true">

            <TextView
                style="@style/WhiteShadowText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <!-- ðŸŽ¤ Mic Bar -->
    <FrameLayout
        android:id="@+id/btnMic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rectangle_deep_blue"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Activate Voice Command">

        <ImageView
            style="@style/MicIconStyle"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic"
            android:contentDescription="Microphone Icon" />
    </FrameLayout>
</LinearLayout>
