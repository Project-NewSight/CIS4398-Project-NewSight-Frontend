<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- 🔝 Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/topNavBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#222222">

        <!-- 🟨 Home -->
        <FrameLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_cyan"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Go to Home">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- 🎤 Mic -->
        <FrameLayout
            android:id="@+id/btnMic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_grey"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Activate Voice Command">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic"
                android:contentDescription="Microphone Icon" />
        </FrameLayout>
    </LinearLayout>

    <!-- 🎯 Two-Button Communication Panel -->
    <LinearLayout
        android:id="@+id/communicatePanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:showDividers="middle">

        <!-- 🎤 Speak to Text -->
        <FrameLayout
            android:id="@+id/btnSpeakToText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_blue"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Speak to Text or Assistant">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Speak to Text or Assistant"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Translate Sign Language -->
        <FrameLayout
            android:id="@+id/btnSignTranslation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_teal"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Translate Sign Language">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Translate Sign Language"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <!-- Bottom Bar -->
    <FrameLayout
        android:id="@+id/btnStartStopComm"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/rectangle_yellow"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Start or Stop Communication">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Start / Stop Communicating"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>
