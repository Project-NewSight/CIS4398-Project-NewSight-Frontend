<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- ðŸ” Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/topNavBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#222222">

        <!-- Home Button -->
        <FrameLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_cyan"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Go to Home">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Mic Button -->
        <FrameLayout
            android:id="@+id/btnMic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_grey"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Activate Voice Command">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic"
                android:contentDescription="Microphone Icon" />
        </FrameLayout>
    </LinearLayout>

    <!-- ðŸ§­ 4-Button Grid (fills remaining space) -->
    <GridLayout
        android:id="@+id/navGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="false"
        android:alignmentMode="alignBounds"
        android:gravity="center">

        <!-- Start Navigation -->
        <FrameLayout
            android:id="@+id/btnStartNav"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/rectangle_teal"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Start Navigation">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Start Navigation"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Select Destination -->
        <FrameLayout
            android:id="@+id/btnSelectDest"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/rectangle_purple"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Select Destination">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Select Destination"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Where Am I? -->
        <FrameLayout
            android:id="@+id/btnWhereAmI"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/rectangle_yellow"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Where Am I?">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Where Am I?"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Stop Navigation -->
        <FrameLayout
            android:id="@+id/btnStopNav"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/rectangle_red"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Stop Navigation">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Stop Navigation"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </FrameLayout>
    </GridLayout>
</LinearLayout>
