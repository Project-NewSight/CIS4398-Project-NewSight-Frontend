<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Rotating Ring Container -->
    <FrameLayout
        android:id="@+id/ringContainer"
        android:layout_width="192dp"
        android:layout_height="192dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- Outer Ring -->
        <ImageView
            android:id="@+id/outerRing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/loading_ring_outer" />

        <!-- Inner Ring -->
        <ImageView
            android:id="@+id/innerRing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:src="@drawable/loading_ring_inner" />

        <!-- Pulsing Core -->
        <FrameLayout
            android:id="@+id/pulsingCore"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_pulsing_core">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_primary" />
        </FrameLayout>
    </FrameLayout>

    <!-- Initializing Text -->
    <TextView
        android:id="@+id/tvInitializing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INITIALIZING"
        android:textSize="20sp"
        android:textColor="@color/muted_foreground"
        android:letterSpacing="0.2"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/ringContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Animated Dots -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvInitializing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/dot1"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_circle_primary" />

        <View
            android:id="@+id/dot2"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_circle_primary" />

        <View
            android:id="@+id/dot3"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/bg_circle_primary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
